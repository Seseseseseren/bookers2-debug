
<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		  <div class= "book_detail" >
      <%= render 'book_detail', book: @book %>
      </div>

      <div class= "book_comments_form" >
      <%= render 'book_comments/book_comments_form', book_comments: @book.book_comments %>
      </div>

      <%= form_with model:[@book,@book_comment] do |f| %>
      <%= f.text_area :comment, rows:'5', id:"text_area" %>
      <%= f.submit "送信" %>
      <% end %>

      </div>
      </div>
      </div>
  </div>
</div>