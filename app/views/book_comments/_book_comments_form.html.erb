      <table>
          <% book.book_comments.each do |book_comment| %>
            <% book_comment_user = book_comment.user %>
          <tr>
          <td>
          <%= link_to user_path(book_comment_user), class: "user_#{book_comment_user.id}" do %>
          <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg")  %><br>
          <%= book_comment.user.name %>
          <% end %>
          </td>
          <td><%= book_comment.comment %><td>
          <% if book_comment.user == current_user %>
          <td><%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, remote: true %>
          <% end %>
          </td>
          </tr>
          <% end %>
      </table>

      <%= form_with model:[book,book_comment] do |f| %>
      <%= f.text_area :comment, rows:'5' %>
      <%= f.submit "送信" %>
      <% end %>